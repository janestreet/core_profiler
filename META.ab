version = "$(pkg_version)"
description = "Profiling library"
requires = "bin_prot core core_profiler.disabled fieldslib ppx_assert.runtime-lib ppx_bench.runtime-lib ppx_expect.collector ppx_inline_test.runtime-lib sexplib textutils typerep variantslib"
