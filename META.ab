  archive(native, plugin) = "core_profiler_disabled.cmxs"
  exists_if = "core_profiler_disabled.cma"
)

package "offline_tool" (
  version = "$(pkg_version)"
  description = ""
  requires = "bin_prot core core_profiler fieldslib ppx_assert.runtime-lib ppx_bench.runtime-lib ppx_expect.collector ppx_inline_test.runtime-lib re2 sexplib typerep variantslib"
  archive(byte          ) = "core_profiler_offline_tool.cma"
  archive(native        ) = "core_profiler_offline_tool.cmxa"
  archive(native, plugin) = "core_profiler_offline_tool.cmxs"
  exists_if = "core_profiler_offline_tool.cma"
)
